<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:layout_marginTop="8dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tvNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_semi_bold"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Capturing the Heat and Crunch of Indonesian Cooking"
        android:textColor="@color/nb_text_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivNewsThumbnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@color/nb_line_gray_light"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNewsSnippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="4"
                android:singleLine="false"
                android:text="In “Coconut &amp; Sambal,” the chef Lara Lee leads a culinary expedition through one of the most populous countries in the world."
                android:textColor="@color/nb_text_gray_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPublishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="10h ago"
                android:textColor="@color/nb_text_gray_light"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/nb_line_gray_light"/>

</LinearLayout>

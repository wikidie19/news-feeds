<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:layout_marginTop="16dp"
    android:paddingRight="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivNewsThumbnail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/nb_line_gray_light"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp" />

    <TextView
        android:id="@+id/tvNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_semi_bold"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:text="Capturing the Heat and Crunch of Indonesian Cooking"
        android:textColor="@color/nb_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvNewsSnippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="4"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:text="In “Coconut &amp; Sambal,” the chef Lara Lee leads a culinary expedition through one of the most populous countries in the world."
        android:textColor="@color/nb_text_gray_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPublishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="10h ago"
        android:textColor="@color/nb_text_gray_light"
        android:textSize="12sp" />

</LinearLayout>
